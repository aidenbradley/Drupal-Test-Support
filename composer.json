{
    "name": "aidenbradley/test-support",
    "description": "Provides various traits to help test setup and assertions in Drupal Kernel tests",
    "type": "drupal-module",
    "require": {
        "php": ">=5.3.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Aiden Bradley",
            "email": "mraidenbradley@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "7.3"
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint --test -v",
        "lint-cbf": "vendor/bin/pint",
        "phpcs": "vendor/bin/phpcs --standard=phpcs.xml --extensions=php --tab-width=4 -sp",
        "stan": "php -d memory_limit=4G vendor/bin/phpstan analyse -c phpstan.neon"
    },
    "require-dev": {
        "opis/closure": "^3.6",
        "nesbot/carbon": "^2.66",
        "mglaman/phpstan-drupal": "^1.1",
        "sempro/phpunit-pretty-print": "^1.4",
        "illuminate/collections": "^8.83",
        "brianium/paratest": "^6.9",
        "slevomat/coding-standard": "^8.9",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    }
}
